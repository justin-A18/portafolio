---
interface Props {
	href: string;
	className?: string;
	target?: '_blank' | '_self' | '_parent' | '_top';
	variant?: 'primary' | 'secondary' | 'default';
}

const { href, className, variant = 'default', target } = Astro.props;

const linkVariants = {
	default: 'text-primary-500 hover:text-primary-600',
	primary:
		'block px-2 py-2 transition hover:text-yellow-500 dark:hover:text-yellow-300',
	secondary: 'text-secondary-500 hover:text-secondary-600 underline',
};
---

<a
	href={href}
	target={target}
	rel='noopener noreferrer'
	class={`${linkVariants[variant]} ${className}`}>
	<slot />
</a>
