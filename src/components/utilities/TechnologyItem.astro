---
interface Props {
	id: number;
	name: string;
	icon: any;
}

const { id, name, icon: Icon } = Astro.props;
---

<div
	class='relative flex items-center justify-center group/tooltip'
	id={`${id}`}>
	<Icon />
	<span
		class='absolute bottom-8 left-[50%] translate-x-[-50%] text-sm dark:bg-slate-100 bg-gray-800 dark:text-black text-white p-1 rounded-md transition-all opacity-0 z-20 before:content-[""] before:absolute before:bg-gray-800 before:rounded-sm before:w-2.5 before:rotate-45 before:h-2.5 before:-bottom-1 before:-z-10 before:left-1/2 before:-translate-x-1/2 before:dark:bg-white before:dark:gray-800 group-hover/tooltip:opacity-100 group-hover/tooltip:-translate-y-1 text-center'
		>{name}</span
	>
</div>
